<section id="todos">
  <header>
    <h2>Editing '<%= @city[:city_name] %>'</h2>
  </header>
</section>

<form action="/cities/<%= params[:id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="city_name">Enter the new name for the list:</label>
    </dt>
    <dd>
    <input name="city_name" placeholder="City Name" type="text" value="<%= params[:city_name] || @city[:city_name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/cities/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>
